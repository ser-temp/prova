{% extends "layout.twig" %}

{% block content %}

<section class="productslist-page">

	<div class="title-bar">
		<div class="title-container">
			<h1>{{ page.title }}</h1>
			<div class="title-widget">

				<form class="product-search" method="GET" action="/store">
					<fieldset class="fieldset  fieldset--search  ecomproductslist__fieldset--search">

                        <legend class="legend  ecomproductslist__legend">Search Products</legend>

                        <div class="form-body  ecomproductslist__form-body">

							<div class="form-group  ecomproductslist__form-group">

                                <label class="label  label--search  ecomproductslist__label" for="page-zones__main-widgets__productslist__ecomproductslist__search">Search Products</label>

                                <input class="input  input--search  ecomproductslist__input  js-display-control" id="page-zones__main-widgets__productslist__ecomproductslist__search" name="productlist-search" placeholder="Search term" type="search" value="">

                            </div>

                            <div class="form-group  ecomproductslist__form-group">
                                <button class="button  button--submit  ecomproductslist__button" type="submit">Search</button>
                            </div>

                        </div>

                    </fieldset>
				</form>

			</div>
		</div>
	</div>

	<!-- Zone Content -->
	<div class="zone-content">

		<div class="container">
			<!-- Main Widet Zone -->
	   		{{zone('main')|raw}}
		</div>

	</div>
	<!-- End Zone Content -->

</section>

{% endblock %}
